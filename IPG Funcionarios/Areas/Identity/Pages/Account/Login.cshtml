@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}


<div class="main-panel view-html" style="width:100%;">
    <div class="content-wrapper">
        <div class="row">
            <div class="col">
                <!--HTML -->

                <div class="d-flex align-items-center auth">
                    <div class="row flex-grow">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left p-5">
                                <h6 class="font-weight-light">Faça login para continuar.</h6>
                                <form id="account" method="POST" class="pt-3">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Input.Email" ></label>
                                        <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Email">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password" ></label>
                                        <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Senha">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="mt-3">
                                        <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">ENTRAR</button>
                                    </div>
                                    <div class="my-2 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <label asp-for="Input.RememberMe" class="form-check-label text-muted">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                        <a id="forgot-password" asp-page="./ForgotPassword" class="auth-link text-black">Esqueceu senha?</a>
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Não possui uma conta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Criar</a>
                                    </div>
                                    <input type="hidden" name="Input.RememberMe" value="false" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!--HTML -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
